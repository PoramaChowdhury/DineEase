<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Menu">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/photoBeverage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/img_background" />

        <Button
            android:id="@+id/button_Beverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beverage Hub" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/photoMeat"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/img_background" />

        <Button
            android:id="@+id/button_Meat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meat Item" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/photoAppetizer"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/img_background" />

        <Button
            android:id="@+id/button_Appetizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appetizer" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/photo_fav"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/img_background" />

        <Button
            android:id="@+id/button_Favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Owner's Favourite" />

    </LinearLayout>

</LinearLayout>
